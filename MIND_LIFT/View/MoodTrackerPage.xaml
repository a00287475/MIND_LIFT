                <Button Text="Sad ðŸ˜¢" WidthRequest="150" HeightRequest="60" CornerRadius="30"/>
                <!-- Add more emotions -->
            </FlexLayout>

            <Button Text="SUBMIT" CornerRadius="30" HeightRequest="60" 
                    Command="{Binding SubmitCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>